generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  date        DateTime
  startTime   String?
  endTime     String?
  color       String   @default("#3788d8")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("events")
}
